<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihBankActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_bank1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/bank1"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/rounded_corner"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:onClick="buttonBank1"
                    tools:ignore="OnClick"/>

                <Button
                    android:id="@+id/btn_bank2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/bank2"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/rounded_corner"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:onClick="buttonBank2"
                    tools:ignore="OnClick"/>

                <Button
                    android:id="@+id/btn_bank3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/bank3"
                    android:layout_marginTop="260dp"
                    android:background="@drawable/rounded_corner"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:onClick="buttonBank3"
                    tools:ignore="OnClick"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>