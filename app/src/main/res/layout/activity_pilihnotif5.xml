<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihNotif5Activity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:background="@color/blue">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/foto_anakN5"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@string/todo_imganakN5"
                    android:src="@drawable/fotoanak1" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_bio_anakN5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="25sp"
                android:text="@string/notifikasi5"
                android:textSize="18sp"
                android:textColor="@color/blue"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                tools:ignore="RtlSymmetry"
                tools:targetApi="p" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="100dp">

                    <Button
                        android:id="@+id/btn_tolakN5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="50dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:text="@string/btn_tolak5"
                        android:background="@drawable/rounded_corner"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:onClick="buttonTolak"
                        tools:ignore="ButtonStyle,OnClick"/>

                    <Button
                        android:id="@+id/btn_terimaN5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="37dp"
                        android:paddingRight="18dp"
                        android:paddingLeft="18dp"
                        android:text="@string/btn_terima5"
                        android:background="@drawable/rounded_corner"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:onClick="buttonTerima"
                        tools:ignore="ButtonStyle,OnClick"/>
                </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>